<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:weightSum="10"
    android:layout_height="match_parent"
    android:layoutDirection="rtl">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#251e54"
            android:layoutDirection="rtl"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"
                app:srcCompat="@drawable/ic_icon_arrow_back"
                android:tint="#fff" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/bahij_thesansarabic_semibold"
                android:text="تعديل لوحة اعلانية "
                android:textColor="@color/light_wieht"
                android:textSize="21sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8.5"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/srcroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">


            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layoutDirection="rtl"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="horizontal"
                        android:paddingBottom="7dp"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:paddingLeft="20dp"
                            android:paddingTop="20dp"
                            android:paddingRight="20dp"

                            android:text="بيانات اللوحة الاعلانية"
                            android:textColor="#383838"
                            android:fontFamily="@font/bahij_thesansarabic_plain"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:paddingLeft="20dp"
                            android:paddingTop="20dp"
                            android:fontFamily="@font/bahij_thesansarabic_plain"
                            android:text="بيانات العنوان"
                            android:textColor="#383838"
                            android:textSize="16sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="horizontal"
                        android:paddingBottom="7dp"
                        android:weightSum="2">


                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:hint="إسم المالك*"
                            android:textDirection="rtl"
                            android:theme="@style/TextLabel"
                            app:endIconMode="clear_text">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/bill_owner_name"
                                android:layout_width="match_parent"
                                android:digits="دجحخهعغفقثصضشسيبلاتن أإمطكظزوةىلارؤءئذqwertyuioplkjhgfdsazxcvbnmQWERTYUIOPLKJHGFDSAZXCVBNM"
                                android:layout_height="match_parent"
                                android:padding="5dp" />

                        </com.google.android.material.textfield.TextInputLayout>


                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"

                            android:hint="المنطقة*"
                            android:textDirection="rtl"
                            android:theme="@style/TextLabel"
                            app:endIconMode="clear_text">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/bill_area"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:maxLength="250"
                                android:padding="5dp" />

                        </com.google.android.material.textfield.TextInputLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="horizontal"
                        android:paddingBottom="7dp"
                        android:weightSum="2">


                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:hint="إسم اللوحة*"
                            android:textDirection="rtl"
                            android:theme="@style/TextLabel"
                            app:endIconMode="clear_text">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/bill_name"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:maxLength="250"
                                android:padding="5dp" />

                        </com.google.android.material.textfield.TextInputLayout>


                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:hint="الشارع*"
                            android:textDirection="rtl"
                            android:theme="@style/TextLabel"
                            app:endIconMode="clear_text">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/bill_street"
                                android:layout_width="match_parent"
                                android:maxLength="250"
                                android:layout_height="match_parent"
                                android:padding="5dp" />

                        </com.google.android.material.textfield.TextInputLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="horizontal"
                        android:paddingBottom="7dp"
                        android:weightSum="2">


                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="0dp"
                            android:visibility="gone"
                            android:layout_height="60dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:hint="نوع اللوحة*"
                            android:textDirection="rtl"
                            android:theme="@style/TextLabel"
                            app:endIconMode="clear_text">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/bill_type"
                                android:layout_width="match_parent"
                                android:maxLength="250"
                                android:layout_height="match_parent"
                                android:padding="5dp" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <Spinner
                            android:id="@+id/spinner_bills_types"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/spinner_shape"
                            android:gravity="center_vertical"
                            android:prompt="@string/type"
                            android:textColor="#000"
                            android:textSize="17sp" />



                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:hint="المحلة*"
                            android:textDirection="rtl"
                            android:theme="@style/TextLabel"
                            app:endIconMode="clear_text">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/bill_locality"
                                android:layout_width="match_parent"
                                android:maxLength="250"
                                android:layout_height="match_parent"
                                android:padding="5dp" />

                        </com.google.android.material.textfield.TextInputLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="horizontal"
                        android:paddingBottom="7dp"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">


                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="0dp"
                                android:layout_height="60dp"
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                                android:hint="طول اللوحة*"
                                android:textDirection="rtl"
                                android:theme="@style/TextLabel"
                                app:endIconMode="clear_text">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/bill_length"
                                    android:layout_width="match_parent"
                                    android:inputType="numberDecimal"
                                    android:maxLength="6"
                                    android:layout_height="match_parent"
                                    android:padding="5dp" />

                            </com.google.android.material.textfield.TextInputLayout>


                            <TextView
                                android:layout_gravity="center_vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:textSize="21sp"
                                android:textColor="#000"
                                android:text="X" />


                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="0dp"
                                android:layout_height="60dp"
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                                android:hint="عرض اللوحة*"
                                android:textDirection="rtl"
                                android:theme="@style/TextLabel"
                                app:endIconMode="clear_text">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/bill_width"
                                    android:layout_width="match_parent"
                                    android:inputType="numberDecimal"
                                    android:maxLength="6"
                                    android:layout_height="match_parent"
                                    android:padding="5dp" />

                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>



                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:hint="الزقاق*"
                            android:textDirection="rtl"
                            android:theme="@style/TextLabel"
                            app:endIconMode="clear_text">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/bill_alley"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:maxLength="250"
                                android:padding="5dp" />

                        </com.google.android.material.textfield.TextInputLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="horizontal"
                        android:paddingBottom="7dp"
                        android:weightSum="2">


                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:hint="ارتفاع اللوحة* "
                            android:textDirection="rtl"
                            android:theme="@style/TextLabel"
                            app:endIconMode="clear_text">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/bill_height"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:inputType="numberDecimal"
                                android:maxLength="6"
                                android:padding="5dp" />

                        </com.google.android.material.textfield.TextInputLayout>



                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:hint="رقم العقار*"
                            android:textDirection="rtl"
                            android:theme="@style/TextLabel"
                            app:endIconMode="clear_text">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/bill_building_number"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:inputType="number"
                                android:maxLength="6"
                                android:padding="5dp" />

                        </com.google.android.material.textfield.TextInputLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="horizontal"
                        android:paddingBottom="7dp"
                        android:weightSum="2">


                        <Spinner
                            android:id="@+id/bill_font_type"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginBottom="15sp"
                            android:layout_weight="1"
                            android:background="@drawable/spinner_shape"
                            android:gravity="center_vertical"
                            android:padding="5dp"
                            android:prompt="@string/type"
                            android:textColor="#000"
                            android:textSize="17sp" />

                        <TextView
                            android:visibility="gone"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:paddingLeft="20dp"
                            android:paddingTop="30dp"
                            android:text="بيانات الرخصة"
                            android:textColor="#000"
                            android:textSize="17sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="5dp"
                        android:paddingRight="10dp"
                        android:weightSum="2">


                        <TextView
                            android:textColor="#383838"
                            android:fontFamily="@font/bahij_thesansarabic_plain"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="right"
                            android:text="بيانات الرخصة"
                            android:textSize="17sp" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="horizontal"
                        android:paddingBottom="7dp"
                        android:weightSum="2">



                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="0dp"
                            android:visibility="gone"
                            android:layout_height="60dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:hint="رخصة اللوحة*"
                            android:textDirection="rtl"
                            android:theme="@style/TextLabel"
                            app:endIconMode="clear_text">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/bill_license"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:inputType="text"
                                android:maxLines="250"
                                android:maxLength="250"
                                android:padding="5dp" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <Spinner
                            android:id="@+id/spinner_linces_types"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/spinner_shape"
                            android:gravity="center_vertical"
                            android:prompt="@string/type"
                            android:textColor="#000"
                            android:textSize="17sp" />


                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:hint="رقم الرخصه*"
                            android:textDirection="rtl"
                            android:theme="@style/TextLabel"
                            app:endIconMode="clear_text">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/bill_license_number"
                                android:layout_width="match_parent"
                                android:inputType="text"
                                android:layout_height="match_parent"
                                android:maxLength="9"
                                android:padding="5dp" />

                        </com.google.android.material.textfield.TextInputLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="horizontal"
                        android:paddingBottom="7dp"
                        android:weightSum="10">


                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_margin="5dp"
                            android:layout_weight="4"
                            android:hint="خط العرض "
                            android:textDirection="rtl"
                            android:theme="@style/TextLabel">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/latitude"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:enabled="false"

                                android:padding="5dp" />

                        </com.google.android.material.textfield.TextInputLayout>



                        <com.google.android.material.textfield.TextInputLayout
                            android:visibility="visible"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_margin="5dp"
                            android:layout_weight="4"
                            android:hint=" خط الطول"
                            android:textDirection="rtl"
                            android:theme="@style/TextLabel">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/longitude"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:enabled="false"
                                android:padding="5dp" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <ImageButton
                            android:layout_margin="5dp"
                            android:id="@+id/get_location"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            app:srcCompat="@drawable/icon_location_p" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="horizontal"
                        android:paddingBottom="25dp"
                        android:weightSum="2">

                        <LinearLayout
                            android:id="@+id/bill_begin_date"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"

                            android:orientation="vertical"
                            android:weightSum="5">


                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/bahij_thesansarabic_plain"
                                android:gravity="center_vertical"
                                android:padding="5dp"
                                android:text="تاريخ اصدار الرخصة"
                                android:textColor="#000"
                                android:textSize="17sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/edit_shap"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/txt_license_start_date"
                                    android:layout_width="0dp"
                                    android:layout_height="56dp"
                                    android:layout_weight="4.5"
                                    android:fontFamily="@font/bahij_thesansarabic_plain"
                                    android:gravity="center_vertical"
                                    android:padding="5dp"
                                    android:text="تاريخ اصدار الرخصة"
                                    android:textColor="#52000000"
                                    android:textSize="17sp" />


                                <ImageView
                                    android:id="@+id/vimg_license_date"
                                    android:layout_width="40dp"
                                    android:layout_height="56dp"
                                    android:layout_weight=".5"
                                    android:gravity="center_vertical"
                                    android:src="@drawable/blue_ic_icon_calendar" />

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/bill_end_date"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"

                            android:orientation="vertical"
                            android:weightSum="5">

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/bahij_thesansarabic_plain"
                                android:gravity="center_vertical"
                                android:padding="5dp"
                                android:text="تاريخ انتهاء الرخصة"
                                android:textColor="#000"
                                android:textSize="17sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/edit_shap"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/txt_license_end_date"
                                    android:layout_width="0dp"
                                    android:layout_height="56dp"
                                    android:layout_weight="4.5"
                                    android:fontFamily="@font/bahij_thesansarabic_plain"
                                    android:gravity="center_vertical"
                                    android:padding="5dp"
                                    android:text="تاريخ انتهاء الرخصة"
                                    android:textColor="#52000000"
                                    android:textSize="17sp" />

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="56dp"
                                    android:layout_weight=".5"
                                    android:gravity="center_vertical"
                                    android:src="@drawable/blue_ic_icon_calendar" />
                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="horizontal"
                        android:paddingBottom="25dp"
                        android:weightSum="2">

                        <Button
                            android:id="@+id/btn_back2"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/btn_shap_past"
                            android:gravity="center"
                            android:text="السابق"
                            android:textColor="#fff"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/btn_save"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/btn_shap_next"
                            android:gravity="center"
                            android:text="تحديث"
                            android:textColor="#fff"
                            android:textSize="16sp"
                            android:textStyle="bold" />



                    </LinearLayout>


                </LinearLayout>

                <ProgressBar
                    android:visibility="gone"
                    android:id="@+id/loading_indicator"
                    style="@style/Widget.AppCompat.ProgressBar"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true" />
            </RelativeLayout>

