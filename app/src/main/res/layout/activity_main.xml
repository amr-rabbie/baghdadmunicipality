<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="rtl"
    android:weightSum="10"
    android:orientation="horizontal"
    tools:context=".Views.mainscreen.MainActivity">


    <ScrollView
        android:id="@+id/rootView"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:background="#FF0000"
        android:layoutDirection="inherit"
        android:weightSum="10"
        android:fillViewport="true"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/colorAccent"
            android:layoutDirection="inherit"
            android:orientation="vertical"
            android:layout_height="3000dp">

            <LinearLayout
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.5"
                android:gravity="center_vertical"
                android:padding="10dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/mob_logo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="تطبيق المسح الميداني"
                    android:textColor="#ffffffff"
                    android:fontFamily="@font/bahij_thesansarabic_bold"
                    android:textSize="15sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/shops_btn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_shops_btn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/white_ic_icon_store"

                    />

                <TextView
                    android:id="@+id/txt_shop_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="المحلات"
                    android:textColor="@color/light_wieht"
                    android:textSize="15sp"
                    android:fontFamily="@font/bahij_thesansarabic_bold"
                    />

                <View
                    android:id="@+id/view_shop_btn"
                    android:layout_width="100dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="5dp"
                    android:background="#ffffffff">

                </View>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/bills_btn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_bills_btn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/gray_ic_icon_ad" />

                <TextView
                    android:id="@+id/txt_bills_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="اللوحات الاعلانية"
                    android:textColor="#888484"
                    android:textSize="15sp"
                    android:fontFamily="@font/bahij_thesansarabic_bold" />

                <View
                    android:id="@+id/view_bills_btn"
                    android:layout_width="100dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="5dp"
                    android:background="#888484">

                </View>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/violation_btn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_violations_btn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/gray_ic_icon_violation" />

                <TextView
                    android:id="@+id/txt_violations_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="رصد المخالفات"
                    android:textColor="@color/ramady"
                    android:textSize="15sp"
                    android:fontFamily="@font/bahij_thesansarabic_bold" />

                <View
                    android:id="@+id/view_violations_btn"
                    android:layout_width="100dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/ramady">

                </View>
            </LinearLayout>



            <LinearLayout
                android:id="@+id/vwork_btn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_work_btn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/gray_ic_icon_calendar" />

                <TextView
                    android:id="@+id/txt_work_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="المهام المجدولة"
                    android:textColor="@color/ramady"
                    android:textSize="15sp"
                    android:fontFamily="@font/bahij_thesansarabic_bold" />

                <View
                    android:id="@+id/view_work_btn"
                    android:layout_width="100dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/ramady">

                </View>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.8"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:src="@drawable/pic"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="احمد محمد"
                    android:textColor="#ffffffff"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <Button
                    android:text="تسجيل الخروج"
                    android:textColor="#ffffff"
                    android:textSize="15sp"
                    android:fontFamily="@font/bahij_thesansarabic_bold"
                    android:layout_width="wrap_content"
                    android:id="@+id/log_out"
                    android:layout_height="60dp" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

    <FrameLayout
        android:id="@+id/frameLayout_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="8">


    </FrameLayout>


</LinearLayout>