<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="5dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="7dp"
    android:background="@color/light_wieht"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:layoutDirection="rtl"
        android:layout_gravity="center_vertical"
        android:weightSum="10"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_icon_store"
                android:tint="@color/colorPrimary"
                android:visibility="visible" />


        </LinearLayout>

        <LinearLayout
            android:layout_marginRight="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:layoutDirection="rtl"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layoutDirection="rtl"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/bill_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="7dp"
                    android:fontFamily="@font/bahij_thesansarabic_bold"
                    android:text="كاتب العدل "
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    />

            </LinearLayout>

            <LinearLayout
                android:visibility="visible"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:layoutDirection="rtl"
                android:weightSum="5"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_width="0dp"
                    app:srcCompat="@drawable/ic_icon_location"
                    android:tint="@color/colorPrimary"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                  />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="4.5"
                    android:id="@+id/address"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bahij_thesansarabic_plain"
                    android:text="بغداد، الكرارة، م 800، ز 13"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:textColor="@color/colorSecondaryText" />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/delete_job_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_synchronizationarrows"
                android:tint="@color/colorPrimary"
                android:visibility="visible" />

            <ImageView

                android:id="@+id/update_job_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/ic_edit"
                android:tint="@color/colorPrimary"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>