<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    android:weightSum="10">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#251e54"
            android:layoutDirection="rtl"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"
                app:srcCompat="@drawable/ic_icon_arrow_back"
                android:tint="#fff"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/bahij_thesansarabic_semibold"
                android:text="تعديل محل"
                android:textColor="@color/light_wieht"
                android:textSize="21sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8.5"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layoutDirection="rtl"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="horizontal"
                        android:paddingBottom="7dp"
                        android:weightSum="2">

                        <TextView

                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:paddingLeft="20dp"
                            android:paddingTop="20dp"
                            android:fontFamily="@font/bahij_thesansarabic_plain"
                            android:paddingRight="20dp"
                            android:text="بيانات المحل"
                            android:textColor="#383838"
                            android:textSize="16sp" />

                        <TextView

                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:paddingLeft="20dp"
                            android:fontFamily="@font/bahij_thesansarabic_plain"
                            android:paddingTop="20dp"
                            android:paddingRight="20dp"
                            android:text="بيانات العنوان"
                            android:textColor="#383838"
                            android:textSize="16sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="7dp"
                        android:weightSum="2">


                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:hint="إسم صاحب المحل*"
                            android:textDirection="rtl"
                            android:theme="@style/TextLabel"
                            app:endIconMode="clear_text">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edt_owner_name"
                                android:layout_width="match_parent"
                                android:digits="دجحخهعغفقثصضشسيبلاتن أإمطكظزوةىلارؤءئذqwertyuioplkjhgfdsazxcvbnmQWERTYUIOPLKJHGFDSAZXCVBNM"
                                android:layout_height="match_parent"
                                android:padding="5dp" />

                        </com.google.android.material.textfield.TextInputLayout>


                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:hint="المنطقة*"

                            android:textDirection="rtl"
                            android:theme="@style/TextLabel"
                            app:endIconMode="clear_text">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edt_area"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                android:padding="5dp" />

                        </com.google.android.material.textfield.TextInputLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="7dp"
                        android:weightSum="2">

                        <Spinner

                            android:id="@+id/shop_type"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/spinner_shape"
                            android:gravity="center_vertical"
                            android:padding="5dp"
                            android:prompt="@string/type"
                            android:textColor="#000"
                            android:textSize="17sp" />


                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:hint="الشارع*"

                            android:textDirection="rtl"
                            android:theme="@style/TextLabel"
                            app:endIconMode="clear_text">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edt_street"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="5dp" />

                        </com.google.android.material.textfield.TextInputLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="7dp"
                        android:weightSum="2">

                        <Spinner

                            android:id="@+id/sp_shop_activities_id"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/spinner_shape"
                            android:gravity="center_vertical"
                            android:padding="5dp"
                            android:prompt="@string/shopactivity"
                            android:textColor="#000"
                            android:textSize="17sp"

                            />

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:hint="المحلة*"
                            android:textDirection="rtl"
                            android:theme="@style/TextLabel"
                            app:endIconMode="clear_text">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edt_locality"
                                android:layout_width="match_parent"

                                android:layout_height="match_parent"
                                android:padding="5dp" />

                        </com.google.android.material.textfield.TextInputLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="7dp"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:weightSum="2">


                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="0dp"
                                android:layout_height="60dp"
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                                android:hint="عرض المحل*"

                                android:textDirection="rtl"
                                android:theme="@style/TextLabel"

                                app:endIconMode="clear_text">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/edt_width_of_shop"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:inputType="numberDecimal"
                                    android:maxLength="6"
                                    android:padding="5dp" />

                            </com.google.android.material.textfield.TextInputLayout>


                            <TextView
                                android:layout_gravity="center_vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:textSize="21sp"
                                android:textColor="#000"
                                android:text="X" />


                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="0dp"
                                android:layout_height="60dp"
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                                android:hint="طول المحل*"

                                android:textDirection="rtl"
                                android:theme="@style/TextLabel"
                                app:endIconMode="clear_text">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/edt_length_of_shop"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:inputType="numberDecimal"
                                    android:maxLength="6"
                                    android:padding="5dp" />

                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>


                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:hint="الزقاق*"

                            android:textDirection="rtl"
                            android:theme="@style/TextLabel"
                            app:endIconMode="clear_text">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edt_alley"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="5dp" />


                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="7dp"
                        android:weightSum="2">


                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:hint="عدد الموظفين*"

                            android:textDirection="rtl"
                            android:theme="@style/TextLabel"
                            app:endIconMode="clear_text">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edt_employee_number"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:maxLength="6"
                                android:inputType="number"
                                android:padding="5dp" />


                        </com.google.android.material.textfield.TextInputLayout>


                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:hint="رقم العقار*"

                            android:textDirection="rtl"
                            android:theme="@style/TextLabel"
                            app:endIconMode="clear_text">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edt_building_number"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:inputType="number"
                                android:maxLength="6"
                                android:padding="5dp" />


                        </com.google.android.material.textfield.TextInputLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="7dp"
                        android:weightSum="2">

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:hint="عدد الطوابق*"

                            android:textDirection="rtl"
                            android:theme="@style/TextLabel"
                            app:endIconMode="clear_text">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edt_floor_number"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:inputType="number"
                                android:maxLength="6"
                                android:padding="5dp" />


                        </com.google.android.material.textfield.TextInputLayout>


                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="0dp"
                            android:layout_height="150dp"
                            android:layout_margin="5dp"
                            android:hint="ملاحظات"
                            android:layout_weight="1"
                            android:textDirection="rtl"
                            android:theme="@style/TextLabel"
                            app:endIconMode="clear_text">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/shop_notes"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="top"
                                android:textSize="17sp"
                                android:maxLength="1000"
                                android:fontFamily="@font/bahij_thesansarabic_semibold"
                                android:inputType="textMultiLine"
                                android:maxLines="5"
                                android:padding="10dp" />

                        </com.google.android.material.textfield.TextInputLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="7dp"
                        android:weightSum="2">

                        <TextView

                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:paddingLeft="20dp"
                            android:paddingTop="20dp"
                            android:paddingRight="20dp"
                            android:text="بيانات الرخصة"
                            android:textColor="#383838"
                            android:textSize="16sp"


                            />

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:hint="عدد الطوابق*"

                            android:textDirection="rtl"
                            android:theme="@style/TextLabel"
                            app:endIconMode="clear_text">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edt_floor_number2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:inputType="number"
                                android:maxLength="6"
                                android:padding="5dp"
                                android:visibility="gone"
                                />


                        </com.google.android.material.textfield.TextInputLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="7dp"
                        android:weightSum="2">



                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:hint="رقم رخصة المحل*"
                            android:textDirection="rtl"
                            android:theme="@style/TextLabel"
                            app:endIconMode="clear_text">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edt_license_number"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:inputType="text"
                                android:maxLength="9"
                                android:padding="5dp" />


                        </com.google.android.material.textfield.TextInputLayout>




                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:hint="رقم رخصة البناء"
                            android:textDirection="rtl"
                            android:theme="@style/TextLabel"
                            app:endIconMode="clear_text">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edt_license_type"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="5dp" />


                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="25dp"
                        android:weightSum="2">

                        <LinearLayout

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:weightSum="5">

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/bahij_thesansarabic_plain"
                                android:gravity="center_vertical"
                                android:padding="5dp"
                                android:text="تاريخ اصدار الرخصة"
                                android:textColor="#000"
                                android:textSize="17sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/edit_shap"
                                android:orientation="horizontal">


                                <TextView
                                    android:id="@+id/edt_license_date"
                                    android:layout_width="0dp"
                                    android:layout_height="56dp"
                                    android:layout_weight="4"
                                    android:gravity="center_vertical"
                                    android:padding="5dp"
                                    android:text="تاريخ اصدار الرخصة"
                                    android:fontFamily="@font/bahij_thesansarabic_plain"
                                    android:textColor="#52000000"
                                    android:textSize="17sp" />

                                <ImageView
                                    android:id="@+id/vimg_license_date"
                                    android:layout_width="0dp"
                                    android:layout_height="56dp"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:src="@drawable/blue_ic_icon_calendar" />


                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"

                            android:orientation="vertical"
                            android:weightSum="5">

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/bahij_thesansarabic_plain"
                                android:gravity="center_vertical"
                                android:padding="5dp"
                                android:text="تاريخ انتهاء الرخصة"
                                android:textColor="#000"
                                android:textSize="17sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/edit_shap"
                                android:orientation="horizontal">


                                <TextView
                                    android:id="@+id/edt_license_end_date"
                                    android:layout_width="0dp"
                                    android:layout_height="56dp"
                                    android:layout_weight="4"
                                    android:gravity="center_vertical"
                                    android:padding="5dp"
                                    android:text="تاريخ انتهاء الرخصة"
                                    android:fontFamily="@font/bahij_thesansarabic_plain"

                                    android:textColor="#52000000"
                                    android:textSize="17sp" />

                                <ImageView
                                    android:id="@+id/vimg_license_end_date"
                                    android:layout_width="0dp"
                                    android:layout_height="56dp"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:src="@drawable/blue_ic_icon_calendar" />
                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="7dp"
                        android:weightSum="2">



                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:hint="اسم المحل*"

                            android:textDirection="rtl"
                            android:theme="@style/TextLabel"
                            app:endIconMode="clear_text">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edt_shop_name"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="5dp" />


                        </com.google.android.material.textfield.TextInputLayout>



                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:visibility="gone"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:hint="نوع لوحة المحل*"

                            android:textDirection="rtl"
                            android:theme="@style/TextLabel"
                            app:endIconMode="clear_text">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edt_billboard_type"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="5dp" />


                        </com.google.android.material.textfield.TextInputLayout>

                        <Spinner
                            android:id="@+id/spinner_bills_types"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/spinner_shape"
                            android:gravity="center_vertical"
                            android:prompt="@string/type"
                            android:textColor="#000"
                            android:textSize="17sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="7dp"
                        android:weightSum="2">



                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:hint="عرض لوحة المحل*"

                            android:textDirection="rtl"
                            android:theme="@style/TextLabel"
                            app:endIconMode="clear_text">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edt_billboard_width"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:inputType="numberDecimal"
                                android:maxLength="6"
                                android:padding="5dp" />


                        </com.google.android.material.textfield.TextInputLayout>


                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:hint="طول لوحة المحل*"

                            android:textDirection="rtl"
                            android:theme="@style/TextLabel"
