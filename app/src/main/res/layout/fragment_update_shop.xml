                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_margin="5dp"
                            android:layout_weight="4"
                            android:hint="خط العرض"

                            android:textDirection="rtl"
                            android:theme="@style/TextLabel">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edt_latidue"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:inputType="numberDecimal"
                                android:enabled="false"
                                android:text="44.361488"
                                android:padding="5dp" />


                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_margin="5dp"
                            android:layout_weight="4"
                            android:hint="خط الطول"
                            android:textDirection="rtl"
                            android:theme="@style/TextLabel">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edt_longtidue"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:inputType="numberDecimal"
                                android:enabled="false"
                                android:text="33.312805"
                                android:padding="5dp" />


                        </com.google.android.material.textfield.TextInputLayout>

                        <ImageButton
                            android:layout_margin="5dp"
                            android:id="@+id/get_location"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            app:srcCompat="@drawable/icon_location_p" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="25dp"
                        android:weightSum="2">


                        <Button
                            android:id="@+id/btn_back2"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/btn_shap_past"
                            android:gravity="center"
                            android:text="السابق"
                            android:textColor="#fff"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/btn_next"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/btn_shap_next"
                            android:gravity="center"
                            android:text="تحديث"
                            android:textColor="#ffffffff"
                            android:textSize="16sp"
                            android:textStyle="bold" />


                    </LinearLayout>

                </LinearLayout>

                <ProgressBar
                    android:id="@+id/loading_indicator"
                    style="@style/Widget.AppCompat.ProgressBar"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
